<%= render 'shared/page_title', title: "View Clearance Batch" %>

<div class="media">
  <div class="media-body">
    <div><strong>Batch Number: <%= @clearance_batches.id %><br>
         Batch Date: <%= @clearance_batches.created_at.strftime("%Y/%m/%d") %><br>
         Status: Clearanced<br><br></strong></div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Item#</th>
          <th>Name</th>
          <th>Type</th>
          <th>Color</th>
          <th>Size</th>
          <th>Wholesale</th>
          <th>Retail</th>
          <th>Clearance</th>
        </tr>
      </thead>

      <tbody>
        <% @clearance_batches.items.each do |batch_items| %>
            <tr>
              <td><%= batch_items.id %></td>
              <td><%= batch_items.style.name %></td>
              <td><%= batch_items.style.type %></td>
              <td><%= batch_items.color %></td>
              <td><%= batch_items.size %></td>
              <td><%= number_to_currency(batch_items.style.wholesale_price) %></td>
              <td><%= number_to_currency(batch_items.style.retail_price) %></td>
              <td><%= number_to_currency(batch_items.price_sold) %></td>
            </tr>
        <% end %>
     </tbody>
    </table>
  </div>
</div>